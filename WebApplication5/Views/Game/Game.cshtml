@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication5.Models.Game
@{
    Layout = "_Layout";
}

<div class="page_content_ctn">

    <div class="page_title_area game_title_area page_content" data-gpnav="columns">

        <div class="apphub_HomeHeaderContent">

            <div class="apphub_HeaderStandardTop">
                <div id="appHubAppName" class="apphub_AppName">@Model.Name</div>
                <div style="clear: both"></div>

            </div>

        </div>

        <div class="block">
            <script type="text/javascript">
                var strRequiredVersion = "9";
                if (typeof (g_bIsOnMac) != 'undefined' && g_bIsOnMac)
                    strRequiredVersion = "10.1.0";

            </script>
            <div class="game_background_glow">


                <div data-panel="{&quot;autoFocus&quot;:true,&quot;focusable&quot;:true,&quot;clickOnActivate&quot;:true}" class="responsive_page_header_img" style="display: none;">
                    <img style="width:100%;" src="https://cdn.cloudflare.steamstatic.com/steam/apps/1091500/header.jpg?t=1663663573">
                </div>

                <div class="about" id="game_highlights" data-panel="{&quot;flow-children&quot;:&quot;column&quot;}">

                    

                    
                    <div class="itcss">
                        <div class="itcss__wrapper">
                            <div class="itcss__items">
                                @{
                                    for (int i = 1; i <= int.Parse(Model.Photos); i++)
                                            {
                                            <div class="itcss__item">
                                                <img class="itcss__item_img" src="/img/@Model.Id/_@i.ToString()_.jpg">
                                            </div>
                                }
                                }
                            </div>
                        </div>
                        <!-- Стрелки для перехода к предыдущему и следующему слайду -->
                        <a class="itcss__control itcss__control_prev" href="#" role="button" data-slide="prev"></a>
                        <a class="itcss__control itcss__control_next" href="#" role="button" data-slide="next"></a>
                    </div>
                    <div class="rightcol" data-panel="{&quot;flow-children&quot;:&quot;column&quot;}">
                        <div class="glance_ctn">
                            <div id="gameHeaderImageCtn" class="game_header_image_ctn">
                                <img class="game_header_image_full" src="/img/@Model.Id/1.jpg">


                            </div>
                            <div class="game_description_snippet">
                                @Model.LongDesc
                            </div>

                            <div class="glance_ctn_responsive_left">

                                <div class="release_date">
                                    <div class="subtitle column">Дата випуску:</div>
                                    <div class="date">10 дек. 2020</div>
                                </div>

                                <div class="dev_row">
                                    <div class="subtitle column">Розробник:</div>
                                    <div class="summary column" id="developers_list">
                                        <a ">@Model.Producer</a>
                                    </div>
                                </div>



                            </div>

                            <div style="clear: both;"></div>
                        </div>
                    </div>
                    </div>


                </div>
                
            </div>
        
        </div>
    <div class="game_area_purchase_game_wrapper">
        <div class="game_area_purchase_game" id="game_area_purchase_section_add_to_cart_367653">

            <div class="game_area_purchase_platform"><span class="platform_img win"></span></div>
            <h1>
                Купити @Model.Name
            </h1>

            <div class="game_purchase_action">
                <div class="game_purchase_action_bg">
                    <div class="game_purchase_price price" data-price-final="89900">
                        @Model.Price ₴
                    </div>
                    <div class="btn_addtocart">
                        <a data-panel="{&quot;focusable&quot;:true,&quot;clickOnActivate&quot;:true}" class="btn_green_steamui btn_medium" href="javascript:addToCart(367653);" id="btn_add_to_cart_367653">
                            <span>В корзину</span>
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>