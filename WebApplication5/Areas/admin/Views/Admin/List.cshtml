@model IEnumerable<WebApplication5.Models.Game>

@{
    
    ViewData["Title"] = "Games";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class ="flex_b">
    <a asp-controller="Admin" asp-action="Index" class="back__b buy_button">Back To Menu</a>
    <a asp-controller="Admin" asp-action="Create" asp-route-area="Admin" class="add__b buy_button">Create New</a>
</div >
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                   @Html.DisplayNameFor(model => model.Producer)
            </th>
            <th>
                   @Html.DisplayNameFor(model => model.Date_of_public)
            </th>
            <th>
                  @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.Photos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                     @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                     @Html.DisplayFor(modelItem => item.Producer)
            </td>
            <td>
                     @Html.DisplayFor(modelItem => item.Date_of_public)
            </td>
            <td>
                     @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                     @Html.DisplayFor(modelItem => item.Photos)
            </td>
            <td>
                        <a asp-controller="Admin" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Admin" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
