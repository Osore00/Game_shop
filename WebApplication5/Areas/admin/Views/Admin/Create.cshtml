@using WebApplication5.Models
@model Game
@{
    ViewBag.Title = "Create";
}
@{
    Layout = "_Layout";
}
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
@using (Html.BeginForm())
{
    <fieldset>
        <legend>Ігра</legend>
        <div asp-validation-summary="All"></div>
        <div class="editor-label"><b>Ім’я</b></div>
        <div class="editor-field" >
            @Html.EditorFor(model => model.Name)
            <span asp-validation-for="Name" />
        </div>
        <div class="editor-label"><b>Ціна</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            <span asp-validation-for="Price" />
        </div>
        <div class="editor-label"><b>Розробник</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Producer)
            <span asp-validation-for="Producer" />
        </div>
        <div class="editor-label"><b>Дата публікації</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date_of_public)
            <span asp-validation-for="Date_of_public" />
        </div>
        <div class="editor-label"><b>Опис</b></div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.LongDesc)
            <span asp-validation-for="LongDesc" />        
        </div>
        <div class="editor-label"><b>Фото</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Photos)
            <span asp-validation-for="Photos" />
        </div>
        <div class="editor-label"><b>Категорії </b></div>
        @{
            List<Category> categories = ViewBag.Categories;
            foreach (var c in categories)
            {

                <input type="checkbox" name="selectedCategory" value="@c.Id") />
                @c.Name

            }
        }
        <p>
            <input type="submit" value="Зберегти" />
        </p>
    </fieldset>
}
